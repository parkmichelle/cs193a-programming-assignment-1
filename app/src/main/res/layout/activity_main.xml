<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.michellepark.rockpaperscissors.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Can you beat me at rock, paper, scissors? Make your move!"
        android:id="@+id/instructions_view"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rock"
        android:id="@+id/rock_button"
        android:layout_below="@+id/points_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:paddingLeft="39dp"
        android:paddingRight="39dp"
        android:layout_gravity="center_horizontal"
        android:onClick="rockButtonClick"
        android:textColor="#2b488a" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Paper"
        android:id="@+id/paper_button"
        android:layout_marginTop="40dp"
        android:paddingLeft="35dp"
        android:paddingRight="35dp"
        android:layout_below="@+id/rock_button"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:onClick="paperButtonClick"
        android:textColor="#720303" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scissors"
        android:id="@+id/scissors_button"
        android:layout_below="@+id/paper_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:layout_gravity="center_horizontal"
        android:onClick="scissorsButtonClick"
        android:textColor="#036a19" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Points: 0"
        android:id="@+id/points_view"
        android:layout_below="@+id/instructions_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:textSize="35dp"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
